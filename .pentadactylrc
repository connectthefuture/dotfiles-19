" Nicer hints
set hintkeys=asdfghjkl
highlight Hint       font-size: 14px; background: rgba(210,1,133,0.8) !important; border: 2px solid rgb(165,1,105); padding: 4px; border-radius: 3px; font-weight: bold; margin-left: -25px; color: white; font-family: Helvetica; line-height:1em;
highlight HintActive background: rgba(145,197,43,0.8)    !important;
highlight HintElem   background: rgba(255, 209, 20, 0.7) !important;

" Faster scrolling
map -b j 5j
map -b k 5k

" Move between tabs
map J gt
map K gT

" Focus first input.. fast
map i gi

" Disable some Pentadactyl default mappings
nmap a <Nop>
nmap w <Nop>

" Fix the common shortcuts
inoremap <c-v> <c-v><c-v>
inoremap <c-c> <c-v><c-c>
noremap <c-c> <c-v><c-c>
inoremap <c-x> <c-v><c-x>
noremap <c-a> <c-v><c-a>
inoremap <c-a> <c-v><c-a>

" Instapaper
command! rl :open javascript:function%20iprl5(){var%20d=document,z=d.createElement('scr'+'ipt'),b=d.body,l=d.location;try{if(!b)throw(0);d.title='(Saving...)%20'+d.title;z.setAttribute('src',l.protocol+'//www.instapaper.com/j/zK2BUMgnOOTW?u='+encodeURIComponent(l.href)+'&t='+(new%20Date().getTime()));b.appendChild(z);}catch(e){alert('Please%20wait%20until%20the%20page%20has%20loaded.');}}iprl5();void(0)

" Speedup google home page navigation
group -locations=google\.(sk|com)/search\? googlesearch
noremap -group googlesearch j <c-v><Down>
noremap -group googlesearch k <c-v><Up>

" Passkyes
set passkeys+=www.google.com/reader:jkv
set passkeys+=mail.google.com:jk<CR>,gi
